<h1>Listing menus</h1>

<table>
  <tr>
  </tr>
  
<% for menu in @menus %>
  <tr>
    <td><%= h menu.name %>
    <td><%= link_to 'Show', menu_path(menu) %></td>
    <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
    <td><%= link_to 'Delete', menu_path(menu), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New menu', new_menu_path %>